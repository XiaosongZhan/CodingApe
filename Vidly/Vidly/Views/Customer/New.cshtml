@model Vidly.ViewModels.NewCustomerViewModel
    
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>



@using (@Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MemberId)
        @Html.DropDownListFor(m => m.Customer.MemberId, new SelectList(Model.Memberships, "MembershipId", "TypeName"), "Select Member Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MemberId)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribed) Subscribed?
        </label>
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

